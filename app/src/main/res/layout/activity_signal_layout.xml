<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background2"
    android:backgroundTint="#03A9F4"
    android:backgroundTintMode="add"
    android:hapticFeedbackEnabled="false"
    tools:context=".SignalLayout">


        <EditText
            android:id="@+id/teDisplayLieu"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:hint="Selected Lieu"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.232"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.147"
            tools:ignore="MissingConstraints" />


        <Button
            android:id="@+id/btnSelectLieu"
            android:layout_width="91dp"
            android:layout_height="45dp"
            android:background="@mipmap/buttonimage"
            android:text="choix"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.846"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.147" />

        <EditText
            android:id="@+id/TELoc"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:hint="Selected localisation"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.232"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.252" />

        <Button
            android:id="@+id/btnSelectLocation"
            android:layout_width="91dp"
            android:layout_height="45dp"
            android:background="@mipmap/buttonimage"
            android:text="choix"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.846"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.252" />

        <EditText
            android:id="@+id/teDisplayCause"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:hint="Selected Cause"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.232"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.358" />

        <Button
            android:id="@+id/btnSelectCause"
            android:layout_width="91dp"
            android:layout_height="45dp"
            android:background="@mipmap/buttonimage"
            android:text="choix"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.846"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.358" />

        <EditText
            android:id="@+id/teNature"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:background="#FFFFFF"
            android:backgroundTintMode="src_in"
            android:gravity="center"
            android:hapticFeedbackEnabled="false"
            android:hint="Selected Nature"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.232"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.467" />


        <Button
            android:id="@+id/NatureButton"
            android:layout_width="91dp"
            android:layout_height="45dp"
            android:background="@mipmap/buttonimage"
            android:text="choix"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.846"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.467" />

        <Button
            android:id="@+id/camera"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:background="@mipmap/buttonimage"
            android:onClick="Camera"
            android:text="Camera"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.174"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.581"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/gallery"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:background="@mipmap/buttonimage"
            android:onClick="Gallery"
            android:text="Galerie"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.847"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.581"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/reteur"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:background="@mipmap/buttonimage"
            android:onClick="retour"
            android:text="Reteur"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/envoyer"
            app:layout_constraintHorizontal_bias="0.212"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.918"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/envoyer"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:background="@mipmap/buttonimage"
            android:text="Envoyer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.847"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.918"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/IView"
            android:layout_width="300dp"
            android:layout_height="160dp"
            android:scrollbarSize="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.8"
            app:srcCompat="@drawable/camera_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>